<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50pt"></LinearLayout>
    <TextView
            android:textSize="10pt"
            android:textStyle="bold"
            android:gravity="center"
            android:text="REGISTRATION SUCCESFUL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="16dp"
            app:layout_constraintVertical_bias="0.154"/>

        <ImageView
                android:src="@drawable/successlogin"
                android:layout_width="match_parent"
                android:layout_height="50pt"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50pt"></LinearLayout>


        <TextView
                android:textSize="20pt"
                android:textStyle="bold"
                android:gravity="center"
                android:text="CheckOut Your email and Verrify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="16dp"
                app:layout_constraintVertical_bias="0.154"/>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>